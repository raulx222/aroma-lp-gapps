#Remove old gapps for a more accurate system size
#
##############################################
ini_set("text_next", "System size check");
checkviewbox(
	"System size check",
	"Remove previously installed GApps\n\n\n\n<b>Later in this process previously installed GApps will be removed. Do you want to remove them now for a more accurate system size check?</b>\n\n",
	"@welcome",

	"Remove now the previously installed GApps.", "1", "remprevgapps"
);
if
		getvar("remprevgapps")=="1" 
	then
		run_program("/sbin/busybox", "mount", "/system");
		zipexec("system/addon.d/80-gapps.sh", "remove");
		run_program("/sbin/busybox", "umount", "/system");
endif;
ini_set("text_next", "Next");




##############################################
#
#Execute portection script - it will check if some apps are installed
#
##############################################
